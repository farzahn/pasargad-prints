# Production Environment Variables
VITE_APP_TITLE=Pasargad Prints
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production
VITE_NODE_ENV=production

# API Configuration
VITE_API_BASE_URL=https://api.pasargadprints.com
VITE_API_URL=https://api.pasargadprints.com
VITE_API_TIMEOUT=30000

# CDN Configuration
VITE_CDN_URL=https://cdn.pasargadprints.com
VITE_STATIC_URL=https://static.pasargadprints.com

# Analytics & Tracking
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_HOTJAR_ID=XXXXXXX

# Error Tracking & Monitoring
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_ENABLE_ERROR_TRACKING=true

# Payment
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_key

# PWA & Service Worker
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# Performance & Optimization
VITE_LAZY_LOAD_IMAGES=true
VITE_OPTIMIZE_IMAGES=true
VITE_PRELOAD_CRITICAL_ASSETS=true
VITE_ENABLE_BUNDLE_SPLITTING=true
VITE_ENABLE_COMPRESSION=true
VITE_CACHE_BUSTING=true

# Security
VITE_SECURE_COOKIES=true
VITE_ENFORCE_HTTPS=true
VITE_ENABLE_CSP=true
VITE_ENABLE_SECURITY_HEADERS=true

# SEO & Metadata
VITE_SITE_URL=https://pasargadprints.com
VITE_SITE_NAME=Pasargad Prints
VITE_SITE_DESCRIPTION=Premium 3D printing products and services
VITE_ENABLE_SITEMAP=true
VITE_ENABLE_ROBOTS_TXT=true
VITE_ENABLE_STRUCTURED_DATA=true

# Social Media
VITE_TWITTER_HANDLE=@pasargadprints
VITE_FACEBOOK_APP_ID=your_facebook_app_id
VITE_LINKEDIN_COMPANY_ID=your_linkedin_company_id

# Build Configuration
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
VITE_BUNDLE_ANALYZER=false

# Internationalization
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,fa

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_CHAT_SUPPORT=true
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_PRODUCT_COMPARISON=true