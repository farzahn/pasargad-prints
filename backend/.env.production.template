# =============================================================================
# PASARGAD PRINTS PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.production and fill in the production values
# NEVER commit the actual .env.production file to version control
# =============================================================================

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================
SECRET_KEY=your-super-secret-production-key-here-change-this-immediately
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-load-balancer-ip

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=pasargad_prints_prod
DB_USER=pasargad_db_user
DB_PASSWORD=secure-database-password-here
DB_HOST=your-database-host
DB_PORT=5432

# Database connection pooling
DB_CONN_MAX_AGE=600
DB_CONN_HEALTH_CHECKS=True

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://your-redis-host:6379/0
REDIS_CACHE_URL=redis://your-redis-host:6379/1
REDIS_SESSION_URL=redis://your-redis-host:6379/2
REDIS_API_URL=redis://your-redis-host:6379/3

# Redis SSL (if using managed Redis service)
REDIS_SSL=False
REDIS_SSL_CERT_REQS=None

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://your-redis-host:6379/0
CELERY_RESULT_BACKEND=redis://your-redis-host:6379/0
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=True

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@your-domain.com
EMAIL_HOST_PASSWORD=your-email-password-or-app-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Admin email for error notifications
ADMIN_EMAIL=admin@your-domain.com

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_live_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# AWS S3 CONFIGURATION (for media storage)
# =============================================================================
USE_S3=True
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.cloudfront.net

# =============================================================================
# CDN CONFIGURATION
# =============================================================================
USE_CDN=True
CDN_URL=https://your-cdn-domain.com

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=https://your-domain.com
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
SESSION_COOKIE_HTTPONLY=True

# =============================================================================
# SOCIAL AUTHENTICATION
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# External monitoring services
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
CACHE_TIMEOUT=300
SESSION_CACHE_TIMEOUT=3600
API_CACHE_TIMEOUT=60

# Connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_S3_BUCKET=your-backup-bucket-name
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ANON=100/hour
RATE_LIMIT_USER=1000/hour
RATE_LIMIT_BURST=20/minute
RATE_LIMIT_SUSTAINED=1000/day

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_API_DOCS=False
ENABLE_DEBUG_TOOLBAR=False
ENABLE_ADMIN_INTERFACE=True
ENABLE_MONITORING_ENDPOINTS=True

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
ELASTICSEARCH_URL=https://your-elasticsearch-cluster
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# ENVIRONMENT INFO
# =============================================================================
ENVIRONMENT=production
DEPLOYMENT_DATE=2024-01-01
VERSION=1.0.0